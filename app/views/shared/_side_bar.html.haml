.sidebar
  .sidebar__user
    .sidebar__user__icons
      .sidebar__user__icons__left
        = current_user.name
      .sidebar__user__icons__right
        =link_to new_group_path, class: "sidebar__user__icons__right__btn" do
          = icon('fas', 'edit', class: "user__btn--group")
        =link_to edit_user_path(current_user), class: "sidebar__user__icons__right__btn" do
          = icon('fas', 'cog', class: "user__btn--account")
  .sidebar__groups
    - current_user.groups.each do |group|
      .sidebar__groups__group
        = link_to '#' do
          .sidebar__groups__group__name
            = group.name
          .sidebar__groups__group__message
            メッセージはまだありません。