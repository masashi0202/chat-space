.main
  .main__group
    .main__group__left
      .main__group__left__name
        = @group.name
      .main__group__left__members
        Memberï¼š
        - @group.users.each do |user|
          = user.name
    .main__group__edit
      =link_to edit_group_path(@group), class: "main__group__edit__btn" do
        Edit
  .main__comments
    = render @messages
  .main__postmenu
    = form_for [@group, @message], html: { class: "main__postmenu__group" } do |f|
      .main__postmenu__group__text
        = f.text_field :content, class: 'main__postmenu__group__text__form', placeholder: 'type a message'
        = f.label :image, class: 'main__postmenu__group__text__image' do
          = icon('fas', 'image', class: 'main__postmenu__group__text__image__btn')
          = f.file_field :image, class: 'main__postmenu__group__text__image__file'
      = f.submit 'Send', class: 'main__postmenu__group__btn'