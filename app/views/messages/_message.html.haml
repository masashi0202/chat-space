.main__comments__list{data: {message: {id: message.id}}}
  .main__comments__list__top
    .main__comments__list__top__name
      = message.user.name
    .main__comments__list__top__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__comments__list__bottom
    - if message.content.present?
      %p.main__comments__list__bottom__comment
        = message.content
    = image_tag message.image.url, class: '.main__comments__list__bottom__image' if message.image.present?